# Plugspace.io Titan v1.4 - Environment Variables

# Node Environment
NODE_ENV=production

# Server Ports
PORT=3001
LANDING_PORT=3000
STUDIO_PORT=3001
ADMIN_PORT=3002

# Database
DATABASE_URL=mongodb://localhost:27017/plugspace?authSource=admin

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=changeme

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# AI API Keys
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...
VERTEX_AI_PROJECT_ID=...
VERTEX_AI_LOCATION=us-central1

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,https://plugspace.io

# SSL/TLS
SSL_CERT_PATH=/etc/letsencrypt/live/plugspace.io/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/plugspace.io/privkey.pem

# Hostinger API (for domain management)
HOSTINGER_API_KEY=...
HOSTINGER_API_URL=https://api.hostinger.com

# Stripe (for subscriptions)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=change-this-in-production
SESSION_SECRET=change-this-in-production
