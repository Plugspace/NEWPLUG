# ==============================================
# PLUGSPACE.IO TITAN v1.4 - ENVIRONMENT CONFIG
# ==============================================

# Application
NODE_ENV=development
APP_NAME=Plugspace Titan
APP_VERSION=1.4.0
APP_URL=http://localhost:3000

# Database - MongoDB
DATABASE_URL=mongodb://localhost:27017/plugspace?replicaSet=rs0
MONGODB_URI=mongodb://localhost:27017/plugspace?replicaSet=rs0

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# AI Models - Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-api-your-key
CLAUDE_MODEL=claude-sonnet-4-5-20241022

# AI Models - Google (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-key
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_LOCATION=us-central1
GEMINI_MODEL=gemini-2.0-flash-exp

# Vertex AI (for Imagen)
VERTEX_AI_PROJECT=your-vertex-project
VERTEX_AI_LOCATION=us-central1

# Hostinger API
HOSTINGER_API_KEY=your-hostinger-api-key
HOSTINGER_API_SECRET=your-hostinger-api-secret

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=32-char-encryption-key-for-aes256
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Master Admin
MASTER_ADMIN_EMAIL=plugspaceapp@gmail.com

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/tmp/uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Ports
LANDING_PORT=3000
STUDIO_PORT=3001
ADMIN_PORT=3002
API_PORT=4000
VOICE_PORT=8080

# CDN
CDN_URL=https://cdn.plugspace.io
CDN_BUCKET=plugspace-assets

# SSL
SSL_CERT_PATH=/etc/letsencrypt/live/plugspace.io/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/plugspace.io/privkey.pem

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3030
