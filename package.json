{
  "name": "plugspace-titan",
  "version": "1.4.0",
  "private": true,
  "description": "Plugspace.io Titan v1.4 - Enterprise Voice-First AI Website Builder Platform",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "npm run dev --workspace=@plugspace/api",
    "dev:voice": "npm run dev --workspace=@plugspace/voice-server",
    "dev:landing": "npm run dev --workspace=@plugspace/landing",
    "dev:studio": "npm run dev --workspace=@plugspace/studio",
    "dev:admin": "npm run dev --workspace=@plugspace/admin",
    "build": "turbo run build",
    "build:api": "npm run build --workspace=@plugspace/api",
    "build:voice": "npm run build --workspace=@plugspace/voice-server",
    "start": "turbo run start",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:ci": "turbo run test -- --ci --coverage --passWithNoTests",
    "test:watch": "turbo run test -- --watch",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "db:generate": "npm run generate --workspace=@plugspace/database",
    "db:push": "npm run push --workspace=@plugspace/database",
    "db:migrate": "npm run migrate --workspace=@plugspace/database",
    "db:studio": "npm run studio --workspace=@plugspace/database",
    "db:seed": "npm run seed --workspace=@plugspace/database",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install || true",
    "preinstall": "npx only-allow npm",
    "postinstall": "npm run db:generate || true",
    "docker:build": "docker compose -f infrastructure/docker/docker-compose.yml build",
    "docker:up": "docker compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker compose -f infrastructure/docker/docker-compose.yml logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.5"
}
